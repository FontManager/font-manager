PACKAGE     = "Font Manager"
VERSION     = "@PACKAGE_VERSION@"
PACKAGE_DIR = "@prefix@/share/font-manager"
LOCALEDIR   = "@LOCALEDIR@"

import os
import gettext

gettext.install('font-manager')
gettext.bindtextdomain('font-manager', LOCALEDIR)
gettext.textdomain('font-manager')

