            </image>
        </screenshot>
        <screenshot>
            <image type="source">
                http://raw.githubusercontent.com/FontManager/resources/google_fonts_integration.png
            </image>
        </screenshot>
    </screenshots>

    <releases>
        <release version="@PACKAGE_VERSION@" date="2020-07-10"/>
    </releases>

    <translation type="gettext">@PACKAGE_NAME@</translation>

    <url type="homepage">@PACKAGE_URL@</url>
