<?xml version="1.0" encoding="UTF-8"?>
<interface domain="font-manager">
  <requires lib="gtk+" version="3.22"/>
  <template class="FontManagerWaterfallSize" parent="GtkBox">
    <property name="visible">True</property>
    <property name="can-focus">False</property>
    <property name="valign">center</property>
    <property name="border-width">18</property>
    <child type="center">
      <object class="GtkLabel" id="description">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="hexpand">True</property>
        <style>
          <class name="dim-label"/>
        </style>
      </object>
      <packing>
        <property name="expand">True</property>
        <property name="fill">True</property>
        <property name="position">3</property>
      </packing>
    </child>
    <child>
      <object class="GtkComboBoxText" id="combo">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="tooltip-text" translatable="yes">Higher values may adversely affect performance</property>
        <property name="halign">end</property>
        <property name="valign">center</property>
        <property name="active">1</property>
        <property name="active-id">0</property>
        <items>
          <item id="24">  24  </item>
          <item id="36">  36  </item>
          <item id="48">  48  </item>
          <item id="60">  60  </item>
          <item id="72">  72  </item>
          <item id="84">  84  </item>
          <item id="96">  96  </item>
        </items>
      </object>
      <packing>
        <property name="expand">True</property>
        <property name="fill">True</property>
        <property name="pack-type">end</property>
        <property name="position">0</property>
      </packing>
    </child>
    <child>
      <object class="GtkLabel" id="label">
        <property name="visible">True</property>
        <property name="can-focus">False</property>
        <property name="label" translatable="yes">Maximum Waterfall Preview Point Size</property>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">True</property>
        <property name="position">1</property>
      </packing>
    </child>
  </template>
</interface>
